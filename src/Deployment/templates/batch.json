{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "batchAccountName": {
      "type": "string",
      "metadata": {
        "description": "Batch Account Name"
      }
    },
    "batchStorageSkuName": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    }
  },
  "variables": {
    "batchStorageAccountName": "[concat(parameters('batchAccountName'), 'storage')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('batchStorageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "[resourceGroup().location]",
      "comments": "This storage account is used to associate to a batch account",
      "sku": {
        "name": "[parameters('batchStorageSkuName')]"
      },
      "kind": "Storage",
      "tags": {
        "ObjectName": "[variables('batchStorageAccountName')]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Batch/batchAccounts",
      "name": "[parameters('batchAccountName')]",
      "apiVersion": "2015-12-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "ObjectName": "[parameters('batchAccountName')]"
      },
      "properties": {
        "autoStorage": {
          "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', variables('batchStorageAccountName'))]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('batchStorageAccountName'))]"
      ]
    }
  ],
  "outputs": {
    "batchStorageAccountName": {
      "type": "string",
      "value": "[variables('batchStorageAccountName')]"
    },
    "batchAccountName": {
      "type": "string",
      "value": "[parameters('batchAccountName')]"
    }
  }
}
